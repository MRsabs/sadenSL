{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@pages/*": ["./src/pages/*"],
      "@wasm": ["./wasm/pkg/index.js"],
      "@components": ["./src/components"],
      "@api/*": ["./src/api/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

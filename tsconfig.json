{
    "compilerOptions": {
        "moduleResolution": "node",
        "allowJs": true,
        "module": "CommonJS",
        "target": "ES2018",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}